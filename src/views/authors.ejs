</head>

<body id="body">
  <nav class="navbar navbar-expand-sm  navbar-dark">

    <ul class="navbar-nav">

      <%for(var i=0;i<nav.length;i++){%>
        <li class="nav-item active">
          <a class="nav-link" href="<%=nav[i].link%>"><%=nav[i].title%></a>

        </li>
        <%}%>
    </ul>
  </nav>
  <div class="jumbotron jumbotron-fluid " id="div1">
    <div class="container row" id="div2">
      <h1 class=" col-lg-9 col-sm-8" id="h1"> <b><%=title%></b></h1></div>
      <div class="col-lg-3 col-sm-4 " id="div3">

      
    </div>
  </div>
  <div class="container" id="div4">
    <div class="card">
      <%for(var i=0;i<authors.length;i++){%>
          <div class = "float-left col-sm-2 col-md-2 col-lg-2 col-xl-2" id = "bookleft">

        <img src="/image/<%=authors[i].image%>" class="rounded-circle image-fluid" style="width:30%;height: 40%;">
      </div>
    <div class = "float-right col-sm-8 col-md-8 col-lg-8 col-xl-8" id = "books">
      <h3 class = "card-img-top text-left text-secondary" >
        <%=authors[i].name%>
      </h3> 
    
    
      <h4 class="text-bold text-secondary" >
        <%=authors[i].country%>
      </h4>
    
   
      <label class="text-bold text-secondary" id="label3"> <%=authors[i].age%></label>
          
        <ul class = "nav">
            <li>
                <a href = "/authors/<%=i%>" >Read More</a></small>
            </li>
        </ul>
        <hr>
      <%}%>
    </div>
  </div>

  

</body>

</html>